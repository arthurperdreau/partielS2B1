{% extends 'base.html.twig' %}

{% block title %}Nos Films - Terrine Bellecour{% endblock %}

{% block body %}
    <div class="bg-neutral-900 text-white py-12 min-h-screen">
        <div class="max-w-7xl mx-auto px-6">
            <h1 class="text-4xl font-bold text-yellow-400 mb-8">Nos Films</h1>
            <p class="mb-6">Découvrez la programmation actuelle de Terrine Bellecour et réservez vos places.</p>

            <!-- Scroll horizontal sur mobile, grille sur desktop -->
            <div class="flex overflow-x-auto gap-6 md:grid md:grid-cols-3 md:overflow-visible">
                {% for film in films %}
                    <div class="flex-shrink-0 w-64 md:w-auto bg-neutral-800 rounded-lg overflow-hidden shadow-md hover:scale-105 transition">
                        <img src="{{ vich_uploader_asset(film.image, 'imageFile') }}" alt="{{ film.name }}" class="w-full h-52 ">
                        <div class="p-4">
                            <h2 class="text-xl font-semibold text-yellow-300">{{ film.name }}</h2>
                            <p class="mt-2 text-sm text-neutral-300">{{ film.resume|slice(0, 80) ~ '...' }}</p>
                            <div class="flex justify-between items-center mt-4">
                                <a href="{{ path('app_film_show', {id: film.id}) }}" class="text-yellow-400 hover:underline text-sm">Détail</a>
                                <a href="{{ path('app_film_seance', {id: film.id}) }}" class="bg-yellow-400 text-neutral-900 font-semibold px-3 py-1 rounded-md hover:bg-yellow-500 transition text-sm">Réserver</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Aucun film disponible pour le moment.</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
