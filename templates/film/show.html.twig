{% extends 'base.html.twig' %}

{% block title %}{{ film.name }} - Terrine Bellecour{% endblock %}

{% block body %}
    <div class="min-h-screen bg-neutral-900 text-white flex items-center justify-center px-4 py-6 sm:py-12">
        <div class="max-w-3xl w-full p-6 sm:p-8 bg-neutral-800 rounded-lg border border-neutral-700 shadow-lg
                    sm:max-w-xl md:max-w-2xl lg:max-w-3xl">
            <h1 class="text-2xl sm:text-3xl font-bold text-yellow-400 mb-4 truncate">{{ film.name }}</h1>

            <p class="mb-2 text-sm sm:text-base"><span class="text-yellow-400 font-semibold">Résumé :</span> {{ film.resume }}</p>
            <p class="mb-2 text-sm sm:text-base"><span class="text-yellow-400 font-semibold">Durée :</span> {{ film.duration }} minutes</p>
            <p class="mb-6 text-sm sm:text-base"><span class="text-yellow-400 font-semibold">Francophone :</span> {{ film.francophone ? 'Oui' : 'Non' }}</p>

            {% if film.image %}
                <div class="mb-6">
                    <img src="{{ vich_uploader_asset(film.image, "imageFile") }}" alt="{{ film.name }}"
                         class="rounded-md shadow-lg w-full h-auto object-cover max-h-96" />
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
