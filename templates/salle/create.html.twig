{% extends 'base.html.twig' %}

{% block title %}Créer une salle{% endblock %}

{% block body %}
    <div class="min-h-screen bg-neutral-900 flex items-center justify-center py-12">
        <div class="w-full max-w-md bg-neutral-800 border border-neutral-700 rounded-lg p-8">
            <h1 class="text-2xl text-white font-bold mb-6">Créer une <span class="text-yellow-400">salle</span></h1>

            {{ form_start(form, {'attr': {'class': 'flex flex-col gap-4'}}) }}
            {{ form_row(form.numero, {
                'attr': {
                    'class': 'w-full px-4 py-2 rounded-md bg-neutral-700 border border-neutral-600 text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-yellow-400'
                }
            }) }}
            {{ form_row(form.place, {
                'attr': {
                    'class': 'w-full px-4 py-2 rounded-md bg-neutral-700 border border-neutral-600 text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-yellow-400'
                }
            }) }}
            <button class="w-full bg-yellow-400 text-neutral-900 font-semibold py-2 rounded hover:bg-yellow-500 transition">
                Créer la salle
            </button>
            {{ form_end(form) }}

            <a href="{{ path('app_salle') }}" class="block text-center text-neutral-400 text-sm mt-4 hover:underline">
                Retour à la liste des salles
            </a>
        </div>
    </div>
{% endblock %}
