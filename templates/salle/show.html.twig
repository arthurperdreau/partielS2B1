{% extends 'base.html.twig' %}

{% block title %}Salle n°{{ salle.numero }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-neutral-900 py-12">
        <div class="max-w-xl mx-auto bg-neutral-800 border border-neutral-700 rounded-lg p-8">
            <h1 class="text-3xl text-yellow-400 font-bold mb-6">Salle n°{{ salle.numero }}</h1>

            <p class="text-neutral-300 mb-4">Nombre de places : <span class="font-semibold text-white">{{ salle.place }}</span></p>

            <div class="flex gap-3">
                <a href="{{ path('app_salle_edit', {id: salle.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-neutral-900 px-4 py-2 rounded">
                    Modifier
                </a>
                <a href="{{ path('app_salle_delete', {id: salle.id}) }}"
                   class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded inline-block">
                    Supprimer
                </a>

            </div>

            <a href="{{ path('app_salle') }}" class="block text-center text-neutral-400 text-sm mt-6 hover:underline">
                Retour à la liste des salles
            </a>
        </div>
    </div>
{% endblock %}
