{% extends 'base.html.twig' %}

{% block title %}Créer un horaire - Terrine Bellecour{% endblock %}

{% block body %}
    <div class="min-h-screen bg-neutral-900 flex items-center justify-center p-8">
        <div class="w-full max-w-xl bg-neutral-800 rounded-lg border border-neutral-700 shadow-lg p-8">
            <h1 class="text-3xl font-bold mb-6 text-yellow-400 text-center">Ajouter un <span class="text-white">horaire</span></h1>

            {{ form_start(form, {'attr': {'class': 'flex flex-col gap-6'}}) }}

            <div>
                {{ form_label(form.horaire, null, {'label_attr': {'class': 'block text-white mb-1'}}) }}
                {{ form_widget(form.horaire, {'attr': {
                    'class': 'w-full px-4 py-2 rounded-md bg-neutral-700 border border-neutral-600 text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-yellow-400',
                    'type': 'time'
                }}) }}
                {{ form_errors(form.horaire) }}
            </div>

            <div class="flex gap-4">
                <button type="submit" class="flex-1 bg-yellow-400 text-neutral-900 font-semibold py-2 rounded-md hover:bg-yellow-500 transition">
                    Créer
                </button>
                <a href="{{ path('app_horaire') }}" class="flex-1 text-center bg-neutral-700 hover:bg-neutral-600 text-white py-2 rounded-md transition">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
