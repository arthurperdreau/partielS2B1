{% extends 'base.html.twig' %}

{% block title %}Liste des horaires{% endblock %}

{% block body %}
    <div class="min-h-screen bg-neutral-900 flex flex-col items-center justify-start py-10 px-4">
        <h1 class="text-3xl font-bold mb-6 text-yellow-400">Gestion des horaires</h1>

        <a href="{{ path('app_horaire_create') }}"
           class="bg-yellow-500 hover:bg-yellow-600 text-black px-4 py-2 rounded mb-6 inline-block">
            + Ajouter un horaire
        </a>

        <div class="bg-gray-800 rounded-xl shadow-md overflow-hidden w-full max-w-3xl">
            <table class="text-left w-full">
                <thead class="bg-gray-700 text-yellow-400">
                <tr>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">Horaire</th>
                    <th class="px-4 py-3">Actions</th>
                </tr>
                </thead>
                <tbody class="text-white">
                {% for horaire in horaires %}
                    <tr class="border-b border-gray-700 hover:bg-gray-700">
                        <td class="px-4 py-3">{{ horaire.id }}</td>
                        <td class="px-4 py-3">{{ horaire.horaire|date('H:i') }}</td>
                        <td class="px-4 py-3 space-x-4">
                            <a href="{{ path('app_horaire_edit', {id: horaire.id}) }}"
                               class="text-yellow-400 hover:underline">Modifier</a>
                            <a href="{{ path('app_horaire_delete', {id: horaire.id}) }}"
                               class="text-red-500 hover:underline inline-block">
                                Supprimer
                            </a>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="px-4 py-3 text-center text-neutral-400">Aucun horaire trouv√©.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
