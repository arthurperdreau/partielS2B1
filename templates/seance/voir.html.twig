{% extends 'base.html.twig' %}

{% block title %}Séances - Terrine Bellecour{% endblock %}

{% block body %}
    <div class="min-h-screen bg-neutral-900 py-10 px-4 flex flex-col items-center">
        <div class="w-full max-w-3xl bg-neutral-800 rounded-lg shadow-lg p-8 border border-neutral-700">
            <h1 class="text-3xl font-bold text-white mb-6 text-center">
                Séances pour <span class="text-yellow-400">{{ film.name }}</span>
            </h1>

            {% if seances is empty %}
                <p class="text-white text-center text-lg">
                    Aucune séance disponible prochainement.
                </p>
            {% else %}
                <ul class="space-y-4">
                    {% for seance in seances %}
                        <li class="text-white bg-neutral-700 rounded-md p-4 border border-neutral-600 hover:bg-neutral-600 transition flex justify-between items-center">
                            <div>
                                <strong>Date :</strong> {{ seance.date|date('d/m/Y') }} —
                                <strong>Horaire :</strong> {{ seance.horaire.horaire|date('H:i') }} —
                                <strong>Salle n°</strong> {{ seance.salle.numero }}
                            </div>
                            <a href="{{ path('app_reservation', {'id': seance.id}) }}"
                               class="bg-yellow-400 text-neutral-900 font-semibold py-2 px-4 rounded-md hover:bg-yellow-500 transition"
                            >
                                Réserver
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
