{% extends 'base.html.twig' %}

{% block title %}Réservation réussie{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center bg-neutral-900 text-white p-6">
        <h1 class="text-4xl font-bold mb-6">Réservation confirmée !</h1>

        <p class="mb-4">
            Merci {{ reservation.owner.email }}, votre réservation pour la séance de <strong>{{ reservation.seance.film.name }}</strong> a bien été enregistrée.
        </p>

        <p class="mb-4">
            Nombre de billets : {{ reservation.nombreTickets }}<br>
            Prix total : {{ reservation.prix }} €
        </p>

        <a href="{{ path('app_home') }}" class="mt-6 inline-block bg-yellow-400 text-neutral-900 font-semibold py-2 px-4 rounded hover:bg-yellow-500">
            Retour aux films
        </a>
    </div>
{% endblock %}
