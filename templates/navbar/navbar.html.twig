<div class="bg-neutral-900 border-b border-neutral-700">
    <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">

        <!-- LOGO -->
        <div class="flex items-center gap-4">
            <a href="{{ path('app_home') }}">
                <img src="/imagesSite/logo.png" alt="Terrine Bellecour" class="w-12 h-12 rounded-lg">
            </a>
        </div>

        <!-- BURGER MENU -->
        <div class="lg:hidden">
            <button id="burger-btn" class="text-white focus:outline-none">
                <i class="bi bi-list text-3xl"></i>
            </button>
        </div>

        <!-- NAVIGATION -->
        <nav id="nav-menu" class="hidden lg:flex gap-8 text-sm uppercase font-semibold">
            <a href="{{ path('app_home') }}" class="hover:text-yellow-400 text-white">Films</a>
            <a href="{{ path('app_all_seance') }}" class="hover:text-yellow-400 text-white">Séances à venir</a>

            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="hover:text-yellow-400 text-white">Se déconnecter</a>
                {% if "ROLE_ADMIN" in app.user.roles %}
                    <a href="{{ path('app_admin') }}" class="hover:text-yellow-400 text-white">Admin</a>
                {% endif %}
            {% else %}
                <a href="{{ path('app_login') }}" class="hover:text-yellow-400 text-white">Se connecter</a>
            {% endif %}
        </nav>

        <!-- PROFILE -->
        <div class="hidden lg:flex items-center gap-6">
            {% if app.user %}
                <a href="{{ path('app_profile') }}" class="flex items-center gap-2 hover:text-yellow-400 text-white">
                    <i class="bi bi-person-video text-2xl"></i>
                    <span class="text-xs font-semibold uppercase">Profil</span>
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="flex items-center gap-2 hover:text-yellow-400 text-white">
                    <i class="bi bi-person-circle text-2xl"></i>
                    <span class="text-xs font-semibold uppercase">Se connecter</span>
                </a>
            {% endif %}
        </div>
    </div>

    <!-- DROPDOWN MENU (MOBILE) -->
    <div id="mobile-menu" class="lg:hidden hidden px-6 pb-4">
        <nav class="flex flex-col gap-4 text-sm uppercase font-semibold">
            <a href="{{ path('app_home') }}" class="hover:text-yellow-400 text-white">Films</a>
            <a href="{{ path('app_all_seance') }}" class="hover:text-yellow-400 text-white">Séances à venir</a>

            {% if app.user %}
                <a href="{{ path('app_profile') }}" class="hover:text-yellow-400 text-white">Profil</a>
                <a href="{{ path('app_logout') }}" class="hover:text-yellow-400 text-white">Se déconnecter</a>
                {% if "ROLE_ADMIN" in app.user.roles %}
                    <a href="{{ path('app_admin') }}" class="hover:text-yellow-400 text-white">Admin</a>
                {% endif %}
            {% else %}
                <a href="{{ path('app_login') }}" class="hover:text-yellow-400 text-white">Se connecter</a>
            {% endif %}
        </nav>
    </div>
</div>
<script>
    const burger = document.getElementById('burger-btn');
    const menu = document.getElementById('mobile-menu');

    burger.addEventListener('click', () => {
        menu.classList.toggle('hidden');
    });
</script>
